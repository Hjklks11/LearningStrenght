<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutFormulas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@android:color/transparent"
    android:foregroundGravity="center"
    android:gravity="center"
    android:orientation="vertical"
    app:layout_anchorGravity="center"
    tools:context=".calculadoras.rm.FormulasActivity"
    android:theme="@style/Theme.AppCompat.Translucent">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txtFormulas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:foregroundGravity="center"
        android:background="@android:color/transparent"
        android:text="r= nÃºmero de repeticiones realizadas y \nw= peso con el que se han realizado."
        android:textColor="@color/black"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imagenFormulas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:foregroundGravity="center"
        >
    </com.google.android.material.imageview.ShapeableImageView>
</LinearLayout>