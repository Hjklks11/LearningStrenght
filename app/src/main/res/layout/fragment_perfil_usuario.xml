<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayoutFragmentPerfilUsuario"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondorojo"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".usuario.PerfilUsuarioFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/fotoFragmentPerfilUsuario"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:contentDescription="@string/foto_de_perfil_del_usuario"
            android:padding="4dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/roundedImageViewrounded"
            app:srcCompat="@drawable/cbumperro"
            app:strokeColor="@color/white"
            app:strokeWidth="0dp" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btnMenuFragmentPerfilUsuario"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:contentDescription="@string/boton_menu"
                    android:src="@drawable/baseline_more_vert_24"
                    app:elevation="0dp"
                    app:fabCustomSize="40dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="?android:attr/listDivider" />

            <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tilNombreUsuarioFragmentPerfilUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/nombre_de_usuario"
        android:textSize="20sp"
        app:startIconDrawable="@drawable/baseline_alternate_email_24"
        android:textColor="#FFFF"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tilFechaNacFragmentPerfilusuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/fecha_de_nacimiento"
                android:textSize="20sp"
                android:textColor="#FFFF"
                app:startIconDrawable="@drawable/baseline_calendar_today_24" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tilEmailFragmentPerfilUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/email"
                android:textSize="20sp"
                android:textColor="#FFFF"
                app:startIconDrawable="@drawable/baseline_mail_outline_24" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tilDeporteFragmentPerfilUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Deporte"
                android:textSize="20sp"
                android:textColor="#FFFF"
                app:startIconDrawable="@drawable/baseline_person_outline_24" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tilPesoFragmentPerfilusuario"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="4dp"
                    android:layout_weight="1"
                    android:text="@string/altura"
                    android:textSize="20sp"
                    app:suffixText=" cm"
                    android:textColor="#FFFF" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tilAlturaFragmentPerfilusuario"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="4dp"
                    android:layout_weight="1"
                    android:text="@string/peso"
                    android:textSize="20sp"
                    app:suffixText=" kg"
                    android:textColor="#FFFF" />
            </LinearLayout>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtRmsFragmentPerfilUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Rms:\n"
                android:textColor="#FFFF"
                android:textSize="20sp" />
        </LinearLayout>
    </ScrollView>
    </LinearLayout>