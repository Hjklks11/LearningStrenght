<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/FrameLayoutTerminar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondorojo"
    tools:context=".anhadir.Terminar_Anhadir">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iconoTerminar"
            android:layout_width="match_parent"
            android:layout_height="258dp"
            android:src="@drawable/hipertrofiaicono" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="50px"
            android:text="Nombre Rutina"
            android:textAlignment="center"
            android:textColor="#FFFFFF" />

        <EditText
            android:id="@+id/editTextNombreRutinaTerminar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/app_name"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:textAlignment="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="20px"
            android:orientation="horizontal">

            <Switch
                android:id="@+id/switchTipo"
                android:layout_width="wrap_content"
                android:layout_height="66dp"
                android:layout_marginLeft="20px"
                android:layout_weight="1"
                android:text="Hipertofia"
                android:textColor="#FFFFFF" />

            <Switch
                android:id="@+id/SwitchPublicaPrivada"
                android:layout_width="wrap_content"
                android:layout_height="66dp"
                android:layout_marginLeft="20px"
                android:layout_weight="1"
                android:text="PÃºblica"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <Button
            android:id="@+id/buttonTerminarAnhadir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Terminar" />

    </LinearLayout>

</FrameLayout>