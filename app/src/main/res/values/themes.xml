<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LearningStrenght" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MaterialComponents" parent="Theme.MaterialComponents.Light.NoActionBar"></style>
    <style name="Theme.Material3" parent="Theme.Material3.Light.NoActionBar"></style>

    <style name="Material3.Custom" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#026e00</item>
        <item name="colorOnPrimary">#ffffff</item>
        <item name="colorPrimaryContainer">#77ff61</item>
        <item name="colorOnPrimaryContainer">#002200</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#343dff</item>
        <item name="colorOnSecondary">#ffffff</item>
        <item name="colorSecondaryContainer">#e0e0ff</item>
        <item name="colorOnSecondaryContainer">#00006e</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#CC026E00</item>
    </style>

